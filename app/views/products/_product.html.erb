<div class="col-sm-6 col-lg-4">
  <div class="card">
    <%= link_to product do %>
      <div class="card-topper" style='background-image: url(<%= product.image_url %>);'></div>
    <% end %>
    <div class="card-block">
      <h4 class="title"><%= link_to product.title, product %></h4>
      <h6><%= product.price %></h6>
      <!-- <p class="text"><%= product.description %></p> -->
    </div>
  </div>
</div>
